{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-theme" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-theme" class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10">
                                <select name="module_reviews_status" id="input-status" class="form-control">
                                    {% if module_reviews_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-preview_w">Заголовок модуля</label>
                            <div class="col-sm-10">
                                <input type="text" name="module_reviews[title]" value="{{ module_reviews.title}}" placeholder="Заголовок" id="input-title" class="form-control" />
                            
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-preview_w">Размеры превью</label>
                            <div class="col-sm-5">
                                <input type="text" name="module_reviews[preview_w]" value="{{ module_reviews.preview_w|default(200) }}" placeholder="Ширина" id="input-preview_w" class="form-control" />
                            </div>
                            <div class="col-sm-5">
                                <input type="text" name="module_reviews[preview_h]" value="{{ module_reviews.preview_h|default(200) }}" placeholder="Высота" id="input-preview_h" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-full_w">Размеры большого фото</label>
                            <div class="col-sm-5">
                                <input type="text" name="module_reviews[full_w]" value="{{ module_reviews.full_w|default(200) }}" placeholder="Ширина" id="input-full_w" class="form-control" />
                            </div>
                            <div class="col-sm-5">
                                <input type="text" name="module_reviews[full_h]" value="{{ module_reviews.full_h|default(200) }}" placeholder="Высота" id="input-full_h" class="form-control" />
                            </div>
                        </div>



                    </fieldset>

                    <fieldset>
                        <legend>Отзывы</legend>
                        <table id="item-value" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td class="text-left">Изображение</td>
                                    <td class="text-center">Имя</td>
                                    <td class="text-right">Видео</td>
                                    <td class="text-right">Рейтинг</td>
                                    <td class="text-right">Порядок сортировки</td>

                                    <td class="text-right"><a href="{{ add }}" type="button" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Добавить" aria-describedby="tooltip660234"><i class="fa fa-plus"></i></button></td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for review in reviews %}
                                    <tr id="option-value-row{{ key }}">
                                        <td class="text-left">
                                            <img width="50" src="{{ review.thumb }}" alt="{{ review.name }}">
                                        </td>
                                        <td class="text-left">{{ review.name }}</td>
                                        <td class="text-left">{{ review.video }}</td>
                                        <td class="text-left">{{ review.rating }}</td>
                                        <td class="text-left">{{ review.sort_order }}</td>

                                        <td class="text-right"><a href="{{ review.edit }}" type="button"  data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Редактировать"><i class="fa fa-pencil"></i></a> <a href="{{ review.remove }}" type="button"  data-toggle="tooltip" title="" class="btn btn-danger" data-original-title="Удалить"><i class="fa fa-minus-circle"></i></a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>

                        </table>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

{{ footer }}